{% extends 'base.html.twig' %}

{% block title %}liste des biens de la catégorie
	{{categorie.name}}
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Liste des biens de la catégorie
					{{ categorie.name }}</h1>
			</div>
			
				{% for bien in biens %}
					<div class="col-3 mb-3">
						<bien class="card h-100">
							<div class="card-body">
								<h2 class="card-title">{{ bien.titre }}</h2>
								<p class="card-text">{{ bien.description }}</p>
								<a href="{{ path('biens_details', {"slug": bien.slug }) }}" class="btn btn-success">Voir les détails</a>
							</div>
						
					</bien>
				</div>
			{% endfor %}
		</section>
	</main>
{% endblock %}
