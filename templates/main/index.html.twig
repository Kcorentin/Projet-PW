							<a href="biens/{{biens[r1].slug}}">
								{{biens[r1].titre}}</a>
						</h5>
						<div class="dot-hr"></div>

						<span class="pull-left">
							<b>Surface :</b>
							{{biens[r1].surface}}</span>
						<span class="proerty-price pull-right">
							<b>Prix :</b>
							{{biens[r1].prix}} €</span>
					</div>
				</div>
			</div>

			<div class="col-sm-6 col-md-4 p2">
